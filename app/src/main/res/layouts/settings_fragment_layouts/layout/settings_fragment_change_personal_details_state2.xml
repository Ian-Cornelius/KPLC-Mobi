<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/changePersonalDetailsLayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/txtChangePersonalHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="18dp"
        android:drawableRight="@drawable/account_card_icon"
        android:drawablePadding="16dp"
        android:fontFamily="@font/lato_regular"
        android:gravity="top"
        android:text="@string/change_pers_details"
        android:textAlignment="gravity"
        android:textColor="@color/kplcGreen"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bulletMarkerChangeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:translationX="-400dp"
        app:layout_constraintStart_toStartOf="@+id/txtChangePersonalHeader"
        app:layout_constraintTop_toBottomOf="@+id/txtChangePersonalHeader"
        app:srcCompat="@drawable/bullet_marker" />

    <TextView
        android:id="@+id/txtChangeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/change_id"
        android:textColor="@color/custom_grey"
        android:textSize="14sp"
        android:translationX="-400dp"
        app:layout_constraintBottom_toBottomOf="@+id/bulletMarkerChangeId"
        app:layout_constraintStart_toEndOf="@+id/bulletMarkerChangeId"
        app:layout_constraintTop_toTopOf="@+id/bulletMarkerChangeId" />

    <ImageView
        android:id="@+id/bulletChangePhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:rotation="90"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:layout_constraintEnd_toEndOf="@+id/bulletMarkerChangeId"
        app:layout_constraintStart_toStartOf="@+id/bulletMarkerChangeId"
        app:layout_constraintBottom_toTopOf="@+id/bulletMarkerChangeId"
        app:srcCompat="@drawable/bullet_marker" />

    <TextView
        android:id="@+id/txtChangePhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/change_phone"
        android:textColor="@color/custom_grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/bulletChangePhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtChangeId"
        app:layout_constraintTop_toTopOf="@+id/bulletChangePhone"
        app:layout_constraintVertical_bias="0.17000002" />

    <Button
        android:id="@+id/btnBackPers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textColor="@color/custom_grey"
        android:translationX="0dp"
        app:layout_constraintEnd_toEndOf="@+id/txtChangePhone"
        app:layout_constraintTop_toBottomOf="@+id/personalDetailsFrag" />

    <LinearLayout
        android:id="@+id/personalDetailsFrag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtChangeId"
        app:layout_constraintTop_toBottomOf="@+id/txtChangeId" />
</android.support.constraint.ConstraintLayout>