<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.motion.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/switchAccFabActivator"
    android:layout_width="52dp"
    android:layout_height="52dp"
    android:background="@drawable/switch_acc_fab_bg"
    android:elevation="5dp"
    android:translationZ="4dp"
    app:layoutDescription="@xml/switch_acc_fab_activator_scene">

    <ImageView
        android:id="@+id/fabTopArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:rotation="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fab_top_arrow_icon" />

    <ImageView
        android:id="@+id/fabBottomArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fabTopArrow"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fab_bottom_arrow_icon" />

</android.support.constraint.motion.MotionLayout>