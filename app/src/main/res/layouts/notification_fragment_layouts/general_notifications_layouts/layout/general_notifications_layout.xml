<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generalNotificationsLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtNotificationsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:text="@string/general_notif"
        android:textColor="@color/kplcGreen"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/guidelineListItemsStart"
        app:layout_constraintTop_toBottomOf="@+id/consumptionTrackLayoutContainer" />

    <TextView
        android:id="@+id/txtNoNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/no_notif_drawable"
        android:drawablePadding="10dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/no_notif"
        android:textColor="@color/custom_grey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/guidelineListItemsStart"
        app:layout_constraintTop_toBottomOf="@+id/txtNotificationsHeader" />

    <TextView
        android:id="@+id/genNotifsSeparator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="34dp"
        android:background="@color/custom_grey"
        app:layout_constraintEnd_toStartOf="@+id/guidelineAllNotifsSepEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineListItemsStart"
        app:layout_constraintTop_toBottomOf="@+id/txtNoNotif" />

</merge>