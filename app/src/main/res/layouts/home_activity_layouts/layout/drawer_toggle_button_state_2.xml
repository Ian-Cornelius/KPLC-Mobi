<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="20dp"
    android:layout_height="20dp">

    <TextView
        android:id="@+id/btnDrawerToggleTopLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:rotation="-45"
        android:scaleX="0.45"
        android:transformPivotX="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnDrawerToggleMidLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/guidelineDrawerToggleMidLineEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnDrawerToggleTopLine" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineDrawerToggleMidLineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.85" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineDrawerToggleBottomLineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <TextView
        android:id="@+id/btnDrawerToggleBottomLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="@color/black"
        android:rotation="45"
        android:scaleX="0.75"
        android:transformPivotX="0dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineDrawerToggleBottomLineEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnDrawerToggleMidLine" />

</android.support.constraint.ConstraintLayout>