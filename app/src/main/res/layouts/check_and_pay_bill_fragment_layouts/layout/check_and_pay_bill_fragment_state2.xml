<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/check_and_pay_bill_main_content_layout"
        android:id="@+id/checkAndPayBillMainContentLayout"/>

    <android.support.constraint.Guideline
        android:id="@+id/guidelineSwitchAccCustFabStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8167" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineSwitchAccCustFabEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9611" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineSwitchAccCustFabBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9759" />

    <LinearLayout
        android:id="@+id/fabContentHolder"
        android:layout_width="280dp"
        android:layout_height="297dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:translationX="400dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineSwitchAccCustFabBottom"
        app:layout_constraintEnd_toEndOf="@+id/guidelineSwitchAccCustFabEnd"></LinearLayout>

    <include
        layout="@layout/switch_activity_fab_layout"
        android:id="@+id/switchAccFabActivator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineSwitchAccCustFabBottom"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>