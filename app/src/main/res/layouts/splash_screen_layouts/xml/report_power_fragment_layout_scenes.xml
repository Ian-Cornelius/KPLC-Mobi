    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/reportFragmentScene1Start"
        motion:constraintSetEnd="@+id/reportFragmentScene1End"
        motion:duration="400"
        motion:motionInterpolator="easeOut"/>

    <Transition
        motion:constraintSetStart="@+id/reportFragmentScene2Start"
        motion:constraintSetEnd="@+id/reportFragmentScene2End"
        motion:duration="400"
        motion:motionInterpolator="easeOut">

        <KeyFrameSet>

            <KeyPosition
                motion:motionTarget="@+id/btnSkip"
                motion:framePosition="50"
                android:layout_marginTop="0dp"
                motion:keyPositionType="deltaRelative"
                motion:percentY="1"
                motion:percentX="0.2"
                motion:transitionEasing="linear"/>

            <KeyAttribute
                motion:motionTarget="@+id/btnSkip"
                motion:framePosition="50"
                android:alpha="0.0"
                motion:transitionEasing="linear"/>

            <KeyPosition
                motion:motionTarget="@+id/btnNext"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:percentX="0.25"
                motion:transitionEasing="linear"/>

            <KeyAttribute
                motion:motionTarget="@+id/btnNext"
                motion:framePosition="50"
                android:alpha="1.0"
                motion:transitionEasing="linear"/>

            <KeyPosition
                motion:motionTarget="@+id/btnSendReport"
                motion:framePosition="50"
                motion:percentX="4"
                motion:transitionEasing="linear"/>

            <KeyAttribute
                motion:motionTarget="@+id/btnSendReport"
                motion:framePosition="50"
                android:alpha="0.0"
                android:layout_marginEnd="0dp"/>

        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/reportFragmentScene1End"
        motion:constraintSetEnd="@+id/reportFragmentScene1Start"
        motion:duration="400"
        motion:motionInterpolator="easeOut"/>


