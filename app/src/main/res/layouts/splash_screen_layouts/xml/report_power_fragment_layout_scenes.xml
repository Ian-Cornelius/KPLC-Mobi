            app:layout_constraintBottom_toBottomOf="@+id/btnNext"
            app:layout_constraintEnd_toStartOf="@+id/guidelineBtnSendEnd"
            app:layout_constraintStart_toStartOf="@+id/guidelineBtnSendStart"
