<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/toggleStart"
        motion:constraintSetEnd="@+id/toggleEnd"
        motion:motionInterpolator="easeOut"
        motion:duration="400"/>

    <ConstraintSet android:id="@+id/toggleStart">

        <Constraint
            android:id="@+id/btnDrawerToggleTopLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="@color/white"/>

        </Constraint>

        <Constraint
            android:id="@+id/btnDrawerToggleMidLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDrawerToggleMidLineEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDrawerToggleTopLine">

            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="@color/white"/>

        </Constraint>

        <Constraint
            android:id="@+id/btnDrawerToggleBottomLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDrawerToggleBottomLineEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDrawerToggleMidLine">

            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="@color/white"/>

        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/toggleEnd">

        <Constraint
            android:id="@+id/btnDrawerToggleTopLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:rotation="-45"
            android:scaleX="0.45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="@color/black"/>

        </Constraint>

        <Constraint
            android:id="@+id/btnDrawerToggleMidLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="0dp"
            android:background="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDrawerToggleMidLineEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnDrawerToggleTopLine" >

            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="@color/black"/>

        </Constraint>

        <Constraint
            android:id="@+id/btnDrawerToggleBottomLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="0dp"
            android:background="@color/black"
            android:rotation="45"
            android:scaleX="1.2"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDrawerToggleBottomLineEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnDrawerToggleMidLine">


            <CustomAttribute
                motion:attributeName="BackgroundColor"
                motion:customColorValue="@color/black"/>

        </Constraint>

    </ConstraintSet>

</MotionScene>