            android:fontFamily="@font/lato_bold"
            android:text="We are logging you in"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="1"
            android:translationY="0dp"
            app:layout_constraintEnd_toEndOf="@+id/dialogBg"
            app:layout_constraintStart_toStartOf="@+id/dialogBg"
            app:layout_constraintTop_toBottomOf="@+id/txtMainWaitMsg" />

        <Constraint
            android:id="@+id/txtFail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/oops"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:alpha="0"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />

        <Constraint
            android:id="@+id/txtFailMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/log_in_err"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/btnOk"
            app:layout_constraintEnd_toEndOf="@+id/dialogBg"
            app:layout_constraintStart_toStartOf="@+id/dialogBg" />

        <Constraint
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/lato_bold"
            android:text="@string/okay"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
