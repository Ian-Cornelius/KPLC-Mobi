            app:layout_constraintTop_toTopOf="@+id/clockBg"
            app:layout_constraintVertical_bias="0.3" />

        <Constraint
            android:id="@+id/clockHourHand"
            android:layout_width="2dp"
            android:layout_height="9dp"
            android:background="@drawable/custom_clock_arm"
            android:rotation="150"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/clockBg"
            app:layout_constraintEnd_toEndOf="@+id/clockBg"
            app:layout_constraintStart_toStartOf="@+id/clockBg"
            app:layout_constraintTop_toTopOf="@+id/clockBg"
            app:layout_constraintVertical_bias="0.3" />

        <Constraint
            android:id="@+id/txtMainWaitMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="Please wait..."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/dialogBg"
            app:layout_constraintEnd_toEndOf="@+id/dialogBg"
            app:layout_constraintStart_toStartOf="@+id/dialogBg"
            app:layout_constraintTop_toTopOf="@+id/dialogBg"
            app:layout_constraintVertical_bias="0.75" />

        <Constraint
            android:id="@+id/txtExpandedWaitMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="We are logging you in"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="@+id/dialogBg"
            app:layout_constraintStart_toStartOf="@+id/dialogBg"
            app:layout_constraintTop_toBottomOf="@+id/txtMainWaitMsg" />

        <Constraint
            android:id="@+id/txtFail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/oops"
