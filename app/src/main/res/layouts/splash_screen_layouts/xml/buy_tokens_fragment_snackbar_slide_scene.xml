<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/snackbarSlideStart"
        motion:constraintSetEnd="@+id/snackbarSlideEnd"
        motion:duration="600"
        motion:motionInterpolator="easeOut">

        <OnSwipe
            motion:touchAnchorId="@+id/token_purchase_success_fragment_holder"
            motion:dragDirection="dragUp"
            motion:touchAnchorSide="top"/>
    </Transition>

    <ConstraintSet android:id="@+id/snackbarSlideStart">

        <Constraint
            layout="@layout/token_purchase_success_fragment"
            android:id="@+id/token_purchase_success_fragment_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineCustSnackBarTopShort" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/snackbarSlideEnd">

        <Constraint
            layout="@layout/token_purchase_success_fragment"
            android:id="@+id/token_purchase_success_fragment_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineCustSnackBarTopExtended" />
    </ConstraintSet>

</MotionScene>