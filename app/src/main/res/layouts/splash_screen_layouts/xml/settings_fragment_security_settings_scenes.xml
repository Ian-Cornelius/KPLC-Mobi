<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/securityState0"
        motion:constraintSetEnd="@+id/securityState1"
        motion:duration="400"
        motion:motionInterpolator="easeOut"/>

    <ConstraintSet android:id="@+id/securityState0">

        <Constraint
            android:id="@+id/bulletChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/txtSecSettingsHeader"
            app:layout_constraintTop_toBottomOf="@+id/txtSecSettingsHeader"
            app:srcCompat="@drawable/bullet_marker" />

        <Constraint
            android:id="@+id/txtChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/change_pass"
            android:textColor="@color/custom_grey"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/bulletChangePass"
            app:layout_constraintStart_toEndOf="@+id/bulletChangePass"
            app:layout_constraintTop_toTopOf="@+id/bulletChangePass" />

        <Constraint
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8681" />

        <Constraint
            android:id="@+id/btnBackSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:background="@android:color/transparent"
            android:text="@string/back"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/separator"
            app:layout_constraintStart_toEndOf="@+id/separator"
            app:layout_constraintTop_toTopOf="@+id/separator" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/securityState1"
        motion:deriveConstraintsFrom="@+id/securityState0">

        <Constraint
            android:id="@+id/bulletChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:rotation="90"
            android:scaleY="1.2"
            android:scaleX="1.2"
            app:layout_constraintStart_toStartOf="@+id/txtSecSettingsHeader"
            app:layout_constraintTop_toBottomOf="@+id/txtSecSettingsHeader"
            app:srcCompat="@drawable/bullet_marker" />

        <Constraint
            android:id="@+id/txtChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/change_pass"
            android:textColor="@color/custom_grey"
            android:textSize="14sp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            app:layout_constraintBottom_toBottomOf="@+id/bulletChangePass"
            app:layout_constraintStart_toEndOf="@+id/bulletChangePass"
            app:layout_constraintTop_toTopOf="@+id/bulletChangePass" />

        <Constraint
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7081" />

        <Constraint
            android:id="@+id/btnBackSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:text="@string/back"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/separator"
            app:layout_constraintStart_toEndOf="@+id/separator"
            app:layout_constraintTop_toTopOf="@+id/separator" />

    </ConstraintSet>

</MotionScene>