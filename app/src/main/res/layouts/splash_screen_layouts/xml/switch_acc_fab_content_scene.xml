    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/baseState1"
        motion:constraintSetEnd="@+id/baseState2"
        motion:duration="400"
        motion:motionInterpolator="easeOut"/>

    <Transition
        motion:constraintSetStart="@+id/baseState1"
        motion:constraintSetEnd="@+id/baseState3"
