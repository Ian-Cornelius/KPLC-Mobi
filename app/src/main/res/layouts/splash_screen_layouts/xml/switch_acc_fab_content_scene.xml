    <ConstraintSet android:id="@+id/baseState1">

        <Constraint
            android:id="@+id/txtCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/current"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/radioBtnAcc1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/radioBtnAcc1"
            app:layout_constraintTop_toTopOf="@+id/radioBtnAcc1" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/baseState2">

