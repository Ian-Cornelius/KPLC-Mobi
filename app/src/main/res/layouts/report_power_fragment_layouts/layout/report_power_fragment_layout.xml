<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guidelineAllReportContentsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1334" />

    <TextView
        android:id="@+id/txtReportHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/report_header"
        android:textAlignment="center"
        android:textColor="@color/custom_grey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineAllReportContentsTop" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineProgressBarTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2534" />

    <include
        android:id="@+id/customProgressBarLayout"
        layout="@layout/report_power_custom_progress_bar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/txtReportHeader"
        app:layout_constraintStart_toStartOf="@+id/txtReportHeader"
        app:layout_constraintTop_toTopOf="@+id/guidelineProgressBarTop" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/reportFragsHolder"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineButtonsTop"
        app:layout_constraintEnd_toEndOf="@+id/customProgressBarLayout"
        app:layout_constraintStart_toStartOf="@+id/customProgressBarLayout"
        app:layout_constraintTop_toBottomOf="@+id/customProgressBarLayout">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guidelineButtonsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7441" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineBtnsEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9239" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineBtnsStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.58" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/green_border_btn_bg"
        android:drawableLeft="@drawable/arrow_right_green"
        android:drawablePadding="-16dp"
        android:paddingLeft="16dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/kplcGreen"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintDimensionRatio="w,3:1"
        app:layout_constraintEnd_toStartOf="@+id/guidelineBtnsEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineBtnsStart"
        app:layout_constraintTop_toTopOf="@+id/guidelineButtonsTop" />

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/skip"
        android:textColor="@color/kplcBlue"
        android:textAllCaps="false"
        android:fontFamily="@font/lato_regular"
        android:background="@drawable/blue_btn_bg_skip"
        android:drawableLeft="@drawable/skip_icon"
        android:drawablePadding="-16dp"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineBtnsEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineBtnsStart"
        app:layout_constraintTop_toBottomOf="@+id/btnNext" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textColor="@color/kplcBlue"
        android:fontFamily="@font/lato_regular"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@+id/reportFragsHolder"
        app:layout_constraintTop_toTopOf="@+id/guidelineButtonsTop" />

</android.support.constraint.ConstraintLayout>